
MDScreen:
    name: "main"
    MDFloatLayout:
        md_bg_color: (25/255,39/255,52/255, 1)
        Image:
            source: "chatbots.png"
            size_hint: .6, .4
            pos_hint: {"center_x": .5, "center_y": .8}
        MDLabel:
            text: "Hello!"
            font_size: "35sp"
            pos_hint: {"center_x": .5, "center_y": .58}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
        MDLabel:
            text: "UNP Departments Information Chatbot"
            size_hint_x: .9
            font_size: "18sp"
            pos_hint: {"center_x": .5, "center_y": .45} 
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
        MDFloatLayout:
            size_hint: .45, .08
            pos_hint: {"center_x": .5, "center_y": .1}
            canvas:
                Color:
                    rgb: (85/255,172/255,238/255,1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22, 22, 22, 22]   
        Button:
            text: ""
            size_hint: .45, .08
            pos_hint: {"center_x": .5, "center_y": .1}
            background_color: 0, 0, 0, 0
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "chats"
        MDLabel:
            text: "LET'S CHAT"
            halign: "center"
            pos_hint: {"center_y": .1}
            font_size: "18sp"
            color: 1, 1, 1, 1
